import sqlite3

connection = sqlite3.connect('steam.db')

cursor = connection.cursor()

#Povoamento dos jogos
cursor.execute("INSERT INTO Jogo (jogo_ID, preco, nome) VALUES ('182828', 35, 'AQW')")
