cursor.execute("INSERT INTO UCG (grupo_ID, user_ID, cargo_ID) VALUES ('002', 'Diego', '02')")



# Povoamento Grupos // Diego - Group By / Having

cursor.execute("INSERT INTO Grupo (grupo_ID, Nome) VALUES ('002', 'IDK_Servidores')")

cursor.execute("INSERT INTO Grupo (grupo_ID, Nome) VALUES ('001', 'SPORTS_GANG')")

#Povoamento Cargos // Diego - Group By / Having

cursor.execute("INSERT INTO Cargo (cargo_ID, nivel_de_hierarquia, Nome) VALUES ('01', '1', 'Administrador')")
